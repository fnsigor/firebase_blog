{
    "rewrites": [
      { "source": "/(.*)", "destination": "/index.html" }
    ],
    "routes": [
      { "src": "/about", "dest": "/index.html" },
      { "src": "/login", "dest": "/index.html" },
      { "src": "/register", "dest": "/index.html" },
      { "src": "/posts/create", "dest": "/index.html" },
      { "src": "/posts/:id", "dest": "/index.html" },
      { "src": "/posts/edit/:id", "dest": "/index.html" },
      { "src": "/dashboard", "dest": "/index.html" },
      { "src": "/search", "dest": "/index.html" },
      { "src": "/(.*)", "status": 404, "dest": "/index.html" }
    ]
  }